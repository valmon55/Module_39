<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherApp"
             x:Class="WeatherApp.MainPage">

    <StackLayout x:Name="stackLayout" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Welcome to WeatherApp!" FontSize="Title" Padding="30,10,30,10" 
               VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <Button x:Name="loginButton" Text="{x:Static local:MainPage.BUTTON_TEXT}" Clicked="LoadWeather" />
        <Button x:Name="alarmButton" Text="{x:Static local:MainPage.BUTTON_ALARM}" Clicked="AlarmSetupXamlPage" />
        <StackLayout x:Name="alarmStackLayout" Margin="0, 20, 0, 0" IsVisible="false">
            <Label Text="Установить будильник" Margin="0, 20, 0, 0" FontSize="20" HorizontalTextAlignment="Center"/>
            <Label Text="Дата запуска" Margin="0, 20, 0, 0" />
            <DatePicker x:Name="datePicker" HorizontalOptions="Center" Format="d.MM.yyyy" Style="{StaticResource ValidDateState}"/>
            <Label Text="Время запуска" Margin="0,20,0,0" />
            <TimePicker x:Name="timePicker"  HorizontalOptions="Center" Format="H:mm" Style="{StaticResource ValidTimeState}"/>
            <Label Text="Громкость" HorizontalOptions="Center" Margin="0,30,0,0" />
            <Slider x:Name="slider" Minimum="0" Maximum="30" Value="5.0" ThumbColor="DodgerBlue" MinimumTrackColor="DodgerBlue" MaximumTrackColor="Gray" />
            <Label Text="Повторять каждый день" HorizontalOptions="Center" Margin="0,5,0,0" />
            <Switch x:Name="swit" HorizontalOptions="Center" IsToggled="False" ThumbColor="DodgerBlue" OnColor="LightSteelBlue" />
            <Button x:Name="buttonSave" Text="Сохранить" Margin="0,5,0,0" BackgroundColor="Silver" />
            <Label x:Name="labelAlert" Margin="0,20,0,0" FontSize="20" HorizontalTextAlignment="Center" IsVisible="false" />
        </StackLayout>
    </StackLayout>
</ContentPage>
