<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherApp"
             x:Class="WeatherApp.MainPage">

    <StackLayout x:Name="stackLayout" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Welcome to WeatherApp!" FontSize="Title" Padding="30,10,30,10" 
               VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <Button x:Name="loginButton" Text="{x:Static local:MainPage.BUTTON_TEXT}" Clicked="LoadWeather" />
        <Button x:Name="alarmButton" Text="{x:Static local:MainPage.BUTTON_ALARM}" Clicked="AlarmSetup" />
    </StackLayout>
</ContentPage>
